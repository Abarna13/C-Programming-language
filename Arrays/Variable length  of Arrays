

//Program for Reverse a series of numbers using variable length of arrays

#include<stdio.h>
int main()
{
    int n;
    printf("Enter the number of elements you want to reverse : ");
    scanf("%d", &n);
    
    int a[n];
    int i;
    printf("Enter all the %d elements : \n",n);
    for(i=0;i<n;i++)
    {
        scanf("%d", &a[i]);
    }
    
    //Reverse order
    
    printf("The elements in reverse order are : \n");
    for(i=n-1;i>=0;i--)
    {
        printf("%d ", a[i]);
    }
    return 0;

    
    
}
    
    
